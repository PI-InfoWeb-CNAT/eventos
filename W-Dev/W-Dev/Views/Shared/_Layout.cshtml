<!DOCTYPE html>
@using W_Dev.Infraestrutura
@using W_Dev.Areas.Seguranca.Models
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Organizador</title>
    <link rel="stylesheet" type="text/css" href="~/css/geralOrganizador.css" />
    <link rel="stylesheet" type="text/css" href="~/css/individualOrganizador.css" />
    <link href="@Url.Content("~/content/bootstrap.css")" rel="stylesheet" />
    @RenderSection("styles", false);
    <link href="@Url.Content("~/css/geralOrganizador.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/individualOrganizador.css")" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <!--MENU LATERAL-->
    <nav id="navLateral">
        <div id="logo">
            <img id="logo" src="~/Imagens/Wdev_Logo.png">
        </div>
        <ul id="menuLateral">
            <li><h2 class="menuLateral">Certificados</h2></li>
            <li><h2 class="menuLateral">@Html.ActionLink("Inscritos", "Index", "Inscricoes", new { Area = "Inscricoes" }, null)</h2></li>
            <li><h2 class="menuLateral">@Html.ActionLink("Programação", "Index", "Sessões", new { Area = "Sessao" }, null)</h2></li>
        </ul>
    </nav>
    <!--MENU SUPERIOR-->
    <nav id="navSuperior">
        <ul class="menu">
            <li>
                <a class="menuSuperior" href="#"><img class="iconeSuperior" src="~/Imagens/icone-config.png" id="configuracao"></a>
                <ul>
                    <li><a href="#"><b>Configurações:</b></a></li>
                    <li class="menuLateral" role="presentation">@Html.ActionLink("Editar perfil", "Edit", "Adm", new { Area = "Seguranca"}, null)</li>
                    <li class="menuLateral" role="presentation">@Html.ActionLink("Eventos Anteriores", "Index", "Eventos", new { Area = "Eventos" }, null)</li>
                    <li class="menuLateral" role="presentation">
                        @{
                            if (Html.GetAuthenticatedUser().ToString() != "")
                            {
                                @Html.GetAuthenticatedUser();
                                @Html.ActionLink("Sair", "Logout", "Account")
                            }
                        }
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    @RenderBody()
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("ScriptPage", false);

</body>
</html>

